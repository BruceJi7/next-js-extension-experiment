{
  "manifest_version": 2,
  "name": "My NEXT Extension",
  "short_name": "my-extension",
  "version": "1.0.0",
  "description": "My Extension",
  "permissions": [],
  "browser_action": {
    "default_title": "My NExtension",
    "default_popup": "index.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "externally_connectable": {
    "matches": ["http://localhost:3020/*"]
  }
}
